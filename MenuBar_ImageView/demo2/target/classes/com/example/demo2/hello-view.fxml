<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="693.0" prefWidth="750.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18" fx:controller="com.example.demo2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <MenuBar prefHeight="25.0" prefWidth="728.0">
     <menus>
       <Menu mnemonicParsing="false" text="Salgados">
         <items>
               <MenuItem mnemonicParsing="false" onAction="#displayImagePao" text="Pao" />
               <MenuItem mnemonicParsing="false" onAction="#displayImageSalada" text="Salada" />
               <MenuItem mnemonicParsing="false" onAction="#displayImageHamburguer" text="Hamburguer" />
           <MenuItem mnemonicParsing="false" onAction="#displayImagePizza" text="Pizza" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Doce">
         <items>
           <MenuItem mnemonicParsing="false" onAction="#displayImageBrigadeiro" text="Brigadeiro" />
               <MenuItem mnemonicParsing="false" onAction="#displayImageGelatina" text="Gelatina" />
               <MenuItem mnemonicParsing="false" onAction="#displayImageBolo" text="Bolo" />
         </items>
       </Menu>
         <Menu mnemonicParsing="false" text="Bebida">
           <items>
             <MenuItem mnemonicParsing="false" onAction="#displayImageCoca" text="Coca Cola" />
               <MenuItem mnemonicParsing="false" onAction="#displayImageSuco" text="Suco" />
           </items>
         </Menu>
     </menus>
   </MenuBar>

    <Label fx:id="welcomeText" />
   <ImageView fx:id="myImageView" fitHeight="390.0" fitWidth="518.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@menuInicial.jpg" />
      </image>
   </ImageView>
</VBox>
